<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sistemarecetas.controller.generalControllers.ChatController"
      spacing="10" alignment="CENTER"
      prefWidth="500" prefHeight="400">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Chat de la Clínica"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Área de mensajes -->
    <TextArea fx:id="txtMensajes"
              prefHeight="280"
              wrapText="true"
              editable="false"
              VBox.vgrow="ALWAYS"
              style="-fx-control-inner-background: #f7f7f7;
                     -fx-font-family: Consolas;
                     -fx-font-size: 14px;"/>

    <!-- Caja para escribir y enviar -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtMensaje"
                   promptText="Escribe tu mensaje..."
                   HBox.hgrow="ALWAYS"
                   onAction="#onSend"/>
        <Button text="Enviar"
                onAction="#onSend"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>
