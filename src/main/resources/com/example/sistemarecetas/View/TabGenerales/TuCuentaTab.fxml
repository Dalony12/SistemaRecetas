<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="20.0" stylesheets="@../../styles/Styles.css"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sistemarecetas.generalControllers.TuCuentaController">
    <children>
        <VBox prefWidth="250.0" spacing="10.0" styleClass="card">
            <children>
                <Label text="Cambio de" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0"/>
                    </font>
                </Label>
                <Label prefHeight="38.0" prefWidth="289.0" text="Contraseña" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="200.0" fitWidth="200.0">
                    <image>
                        <Image url="@../../Images/clave.png"/>
                    </image>
                </ImageView>
            </children>
        </VBox>

        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="301.0" spacing="20.0" styleClass="background">
            <Label prefHeight="108.0" prefWidth="301.0" style="-fx-font-size: 16;" styleClass="title"
                   text="Ingrese su nueva contraseña en &quot;Nueva Contraseña&quot;. Luego verifíquela volviéndola a escribir en el campo &quot;Verificar contraseña&quot;."
                   textAlignment="CENTER" wrapText="true"/>

            <GridPane alignment="CENTER" hgap="10" prefHeight="120.0" prefWidth="301.0" vgap="10">
                <columnConstraints>
                    <ColumnConstraints maxWidth="119.0" minWidth="105.0" prefWidth="110.0"/>
                    <ColumnConstraints maxWidth="145.0" minWidth="131.0" prefWidth="140.0"/>
                </columnConstraints>
                <children>
                    <Label text="Nueva Contraseña"/>
                    <Label text="Verificar Contraseña" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="txtNuevaContrasena" GridPane.columnIndex="1"/>
                    <PasswordField fx:id="txtVerificarContrasena" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </children>
                <rowConstraints>
                    <RowConstraints maxHeight="48.0" minHeight="21.6" prefHeight="29.6"/>
                    <RowConstraints maxHeight="43.2" minHeight="0.0" prefHeight="21.6"/>
                </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnEnviarContraseña" onAction="#EnviarContrasenaNueva" styleClass="button-primary"
                        text="Enviar"/>
                <Button fx:id="btnCancelarContraseña" onAction="#limpiarCampos"
                        style="-fx-background-color: #bababa;" styleClass="button-primary" text="Cancelar"/>
            </HBox>
        </VBox>
    </children>
</HBox>
