<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400" prefWidth="600" stylesheets="@../../styles/Styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemarecetas.controller.adminApplication.MedicamentosController">

    <!-- TableView: inicialmente detrás de la tarjeta, tamaño similar a la tarjeta -->
    <TableView fx:id="tableMedicamentos" fixedCellSize="24" prefHeight="400" prefWidth="150.0" visible="true">
        <columns>
            <TableColumn fx:id="colCodigo" prefWidth="50.0" text="Código" />
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colPresentacion" minWidth="4.0" prefWidth="90.0" text="Presentación" />
            <TableColumn fx:id="colDescripcion" minWidth="4.0" prefWidth="100.0" text="Descripción" />
        </columns>
    </TableView>

    <!-- Contenedor HBox con tarjeta + formulario -->
    <HBox alignment="CENTER_LEFT">

        <!-- Tarjeta izquierda: más dominante -->
        <VBox id="vBoxPortadaMedicamentos" fx:id="vBoxPortadaMedicamentos" alignment="CENTER" prefWidth="400.0" spacing="10" styleClass="card">
            <children>
                <Label text="Gestión de" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font></Label>
                <Label text="Medicamentos" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font></Label>
                <ImageView fitHeight="77.0" fitWidth="67.0" preserveRatio="true">
                    <image>
                        <Image url="@../../Images/suplementos.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>

        <!-- Formulario derecho -->
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="150.0" spacing="20.0" styleClass="background">
            <children>
                <Label prefHeight="44.0" prefWidth="293.0" style="-fx-font-size: 16;" styleClass="title" text="Acciones Disponibles:" />

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <RadioButton id="btnGuardarMedicamento" fx:id="btnGuardarMedicamento" text="Guardar" />
                        <RadioButton id="btnBorrarMedicamento" fx:id="btnBorrarMedicamento" text="Borrar" />
                        <RadioButton id="btnModificarMedicamento" fx:id="btnModificarMedicamento" text="Modificar" />
                  <RadioButton id="btnBuscarMedicamento" fx:id="btnBuscarMedicamento" mnemonicParsing="false" text="Buscar" />
                    </children>
                </HBox>
                <Line endX="182.0" opacity="0.3" startX="-100.0" strokeWidth="2.0" />

                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="150" />
                    </columnConstraints>
                    <children>
                        <Label text="Código" GridPane.rowIndex="0" />
                        <TextField fx:id="txtCodigoMedicamento" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Nombre" GridPane.rowIndex="1" />
                        <TextField fx:id="txtNombreMedicamento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Presentación" GridPane.rowIndex="2" />
                        <TextField fx:id="txtPresentacionMedicamento" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Descripción" GridPane.rowIndex="3" />
                  <TextArea fx:id="txtDescripcionMedicamento" prefHeight="59.0" prefWidth="150.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                  <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER" prefHeight="35.0" prefWidth="310.0" spacing="20.0">
                    <children>
                        <Button id="btnEnviarMedicamento" fx:id="btnEnviarMedicamento" onAction="#GuardarModificarEliminarMedicamento" styleClass="button-primary" text="Enviar" />
                        <Button id="btnCancelarMedicamento" fx:id="btnCancelarMedicamento" onAction="#limpiarCampos" style="-fx-background-color: #bababa;" styleClass="button-primary" text="Cancelar" />
                    </children>
                </HBox>
            </children>
    </VBox>
    </HBox>
</StackPane>
