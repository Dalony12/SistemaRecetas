<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@../../styles/Styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemarecetas.adminApplication.AdminController">

    <children>
        <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">

            <tabs>
                <Tab fx:id="tabMenuPrincipal" onSelectionChanged="#abrirMenuPrincipal" text="Menu Principal">
                    <content>
                        <fx:include fx:id="includeMenuPrincipal" source="../TabGenerales/MenuPrincipalTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabMedicos" onSelectionChanged="#abrirMedicos" text="Médicos">
                    <content>
                        <fx:include fx:id="includeMedicos" source="MedicosTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabFarmaceuticos" onSelectionChanged="#abrirFarmaceuticos" text="Farmacéuticos">
                    <content>
                        <fx:include fx:id="includeFarmaceuticos" source="FarmaceuticosTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabPacientes" onSelectionChanged="#abrirPacientes" text="Pacientes">
                    <content>
                        <fx:include fx:id="includePacientes" source="PacientesTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabMedicamentos" onSelectionChanged="#abrirMedicamentos" text="Medicamentos">
                    <content>
                        <fx:include fx:id="includeMedicamentos" source="MedicamentosTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabDashboard" onSelectionChanged="#abrirDashboard" text="Dashboard">
                    <content>
                        <fx:include fx:id="includeDashboard" source="../TabGenerales/DashboardTab.fxml" />
                    </content>
                </Tab>

                <Tab fx:id="tabHistorial" onSelectionChanged="#abrirHistorial" text="Historial">
                    <content>
                        <fx:include fx:id="includeHistorial" source="../TabGenerales/HistorialTab.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
