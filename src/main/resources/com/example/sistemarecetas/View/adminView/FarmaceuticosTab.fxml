<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER_LEFT" prefHeight="400" prefWidth="600" spacing="20.0" stylesheets="@../../styles/Styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.sistemarecetas.adminApplication.FarmaceuticosController">

    <!-- Tarjeta izquierda -->
    <VBox alignment="CENTER" prefWidth="250" spacing="10" styleClass="card">
        <children>
            <Label text="Gestión de" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font></Label>
            <Label text="Farmacéuticos" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font></Label>
            <ImageView fitHeight="77.0" fitWidth="67.0" preserveRatio="true">
                <image>
                    <Image url="@../../Images/farmaceutico.png" />
                </image>
            </ImageView>
        </children>
    </VBox>

    <!-- Formulario derecho -->
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <children>
            <Label prefHeight="44.0" prefWidth="303.0" style="-fx-font-size: 16;" styleClass="title" text="Seleccione la acción que desea realizar:" />

            <HBox alignment="CENTER" spacing="15">
                <RadioButton id="btnGuardarFarmaceutico" fx:id="btnGuardarFarmaceutico" onAction="#GuardarFarmaceutico" text="Guardar" />
                <RadioButton id="btnBorrarFarmaceutico" fx:id="btnBorrarFarmaceutico" onAction="#BorrarFarmaceutico" text="Borrar" />
                <RadioButton id="btnModificarFarmaceutico" fx:id="btnModificarFarmaceutico" onAction="#ModificarFarmaceutico" text="Modificar" />
            </HBox>
            <Line endX="182.0" opacity="0.3" startX="-100.0" strokeWidth="2.0" />
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="100" />
                    <ColumnConstraints prefWidth="200" />
                </columnConstraints>
                <children>
                    <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField id="txtIDFarmaceutico" fx:id="txtIDFarmaceutico" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField id="txtNombreFarmaceutico" fx:id="txtNombreFarmaceutico" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="310.0" spacing="20.0">
                <children>
                    <Button id="btnEnviarFarmaceutico" fx:id="btnEnviarFarmaceutico" onAction="#EnviarFarmaceutico" styleClass="button-primary" text="Enviar" />
                    <Button id="btnCancelarFarmaceutico" fx:id="btnCancelarFarmaceutico" onAction="#CancelarFarmaceutico" style="-fx-background-color: #bababa;" styleClass="button-primary" text="Cancelar" />
                </children>
            </HBox>
        </children>
    </VBox>

</HBox>