<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemarecetas.AdminController">

    <children>
        <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- ================== TAB 1: MÉDICOS ================== -->
                <Tab text="Médicos">
                    <content>
                        <HBox alignment="CENTER_LEFT" prefHeight="400" prefWidth="600" spacing="20.0">

                            <!-- Tarjeta izquierda -->
                            <VBox alignment="CENTER" prefWidth="250" spacing="10" styleClass="card">
                                <children>
                                    <Label styleClass="title" text="Gestión de" />
                                    <Label styleClass="title" text="Médicos" />
                                    <ImageView fitHeight="77.0" fitWidth="67.0" preserveRatio="true">
                                        <image>
                                            <Image url="@../Images/cirujano.png" />
                                        </image>
                                    </ImageView>
                                    <Label fx:id="lblBusquedaMedico" onMouseClicked="#bucarMedico" styleClass="subrayadoFondoOscuro" text="Ir a búsqueda" underline="true" />
                                </children>
                            </VBox>

                            <!-- Formulario derecho -->
                            <VBox alignment="CENTER" spacing="30.0">
                                <children>
                                    <GridPane alignment="CENTER" hgap="10" vgap="10">
                                        <columnConstraints>
                                            <ColumnConstraints prefWidth="100" />
                                            <ColumnConstraints prefWidth="200" />
                                        </columnConstraints>
                                        <children>
                                            <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                            <TextField fx:id="txtIDMedico" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                            <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                            <TextField fx:id="txtNombreMedico" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                            <Label text="Especialidad" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                            <TextField fx:id="txtEspecialidadMedico" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                    <HBox alignment="CENTER" spacing="15">
                                        <RadioButton fx:id="btnGuardarMedico" text="Guardar" />
                                        <RadioButton fx:id="btnBorrarMedico" text="Borrar" />
                                        <RadioButton fx:id="btnModificarMedico" text="Modificar" />
                                    </HBox>

                                    <Button fx:id="btnEnviarMedico" onAction="#GuardarModificarEliminarMedico" styleClass="button-primary" text="Enviar" />
                                    <Button fx:id="btnLimpiarMedico" onAction="#limpiarCampos" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" text="Limpiar" />
                                </children>
                            </VBox>

                        </HBox>
                    </content>
                </Tab>

                <!-- ================== TAB 2: FARMACÉUTICOS ================== -->
                <Tab text="Farmacéuticos">
                    <content>
                        <HBox alignment="CENTER_LEFT" prefHeight="400" prefWidth="600" spacing="20.0">

                            <!-- Tarjeta izquierda -->
                            <VBox alignment="CENTER" prefWidth="250" spacing="10" styleClass="card">
                                <children>
                                    <Label styleClass="title" text="Gestión de" />
                                    <Label styleClass="title" text="Farmacéuticos" />
                                    <ImageView fitHeight="77.0" fitWidth="67.0" preserveRatio="true">
                                        <image>
                                            <Image url="@../Images/farma.png" />
                                        </image>
                                    </ImageView>
                                    <Label fx:id="lblBusquedaFarmaceuta" onMouseClicked="#buscarFarmaceuta" styleClass="subrayadoFondoOscuro" text="Ir a búsqueda" underline="true" />
                                </children>
                            </VBox>

                            <!-- Formulario derecho -->
                            <VBox alignment="CENTER" spacing="30.0">
                                <children>
                                    <GridPane alignment="CENTER" hgap="10" vgap="10">
                                        <columnConstraints>
                                            <ColumnConstraints prefWidth="100" />
                                            <ColumnConstraints prefWidth="200" />
                                        </columnConstraints>
                                        <children>
                                            <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                            <TextField fx:id="txtIDFarmaceutico" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                            <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                            <TextField fx:id="txtNombreFarmaceutico" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                    <HBox alignment="CENTER" spacing="15">
                                        <RadioButton fx:id="btnGuardarFarmaceutico" text="Guardar" />
                                        <RadioButton fx:id="btnBorrarFarmaceutico" text="Borrar" />
                                        <RadioButton fx:id="btnModificarFarmaceutico" text="Modificar" />
                                    </HBox>

                                    <Button fx:id="btnEnviarFarmaceutico" onAction="#GuardarModificarEliminarFarmaceutico" styleClass="button-primary" text="Enviar" />
                                    <Button fx:id="btnLimpiarFarmaceutico" onAction="#limpiarCampos" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" text="Limpiar" />
                                </children>
                            </VBox>

                        </HBox>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
